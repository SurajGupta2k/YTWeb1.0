{
    "version": 2,
    "builds": [
        {
            "src": "src/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        { "source": "/api/:path*", "destination": "/src/server.js" },
        { "source": "/(.*)", "destination": "/index.html" }
    ]
} 